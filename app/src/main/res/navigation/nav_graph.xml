<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- AUTHENTICATION FLOW -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.habittracker.ui.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.habittracker.ui.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.habittracker.ui.auth.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_forgotPasswordNewFragment"
            app:destination="@id/forgotPasswordNewFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordNewFragment"
        android:name="com.example.habittracker.ui.auth.ForgotPasswordNewFragment"
        android:label="fragment_forgot_password_new"
        tools:layout="@layout/fragment_forgot_password_new" />


    <!-- MAIN APP FLOW -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.habittracker.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <!-- Đi đến màn hình Thêm mới (Add) -->
        <action
            android:id="@+id/action_homeFragment_to_addEditHabitFragment"
            app:destination="@id/addEditHabitFragment" />

        <!-- Đi đến màn hình Chi tiết (Detail) -->
        <action
            android:id="@+id/action_homeFragment_to_habitDetailsFragment"
            app:destination="@id/habitDetailsFragment" />

        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.example.habittracker.ui.analytics.AnalyticsFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" >

        <action
            android:id="@+id/action_analyticsFragment_to_habitDetailsFragment"
            app:destination="@id/habitDetailsFragment" />
    </fragment>

    <!-- Màn hình Thêm/Sửa -->
    <fragment
        android:id="@+id/addEditHabitFragment"
        android:name="com.example.habittracker.ui.habit.AddEditHabitFragment"
        android:label="fragment_add_edit_habit"
        tools:layout="@layout/fragment_add_edit_habit">

        <!-- Khai báo Argument để nhận ID (dùng cho Edit Mode) -->
        <argument
            android:name="EXTRA_HABIT_ID"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- Màn hình Chi tiết -->
    <fragment
        android:id="@+id/habitDetailsFragment"
        android:name="com.example.habittracker.ui.habit.HabitDetailsFragment"
        android:label="fragment_habit_details"
        tools:layout="@layout/fragment_habit_details">

        <!-- Argument nhận ID từ Home -->
        <argument
            android:name="EXTRA_HABIT_ID"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <!-- Action từ Detail sang Edit (Quan trọng) -->
        <action
            android:id="@+id/action_habitDetailsFragment_to_addEditHabitFragment"
            app:destination="@id/addEditHabitFragment" />
    </fragment>

    <fragment
        android:id="@+id/achievementsFragment"
        android:name="com.example.habittracker.ui.achievements.AchievementsFragment"
        android:label="fragment_achievements"
        tools:layout="@layout/fragment_achievements" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.habittracker.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_settingsProfileFragment"
            app:destination="@id/settingsProfileFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_settingsReminderFragment"
            app:destination="@id/settingsReminderFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsProfileFragment"
        android:name="com.example.habittracker.ui.settings.SettingsProfileFragment"
        android:label="fragment_settings_profile"
        tools:layout="@layout/fragment_settings_profile" />

    <fragment
        android:id="@+id/settingsReminderFragment"
        android:name="com.example.habittracker.ui.settings.SettingsReminderFragment"
        android:label="fragment_settings_reminder"
        tools:layout="@layout/fragment_settings_reminder" />

</navigation>
