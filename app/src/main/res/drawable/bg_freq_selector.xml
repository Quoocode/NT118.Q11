<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1. Trạng thái ĐƯỢC CHỌN (Selected = true) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selector_selected_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- 2. Trạng thái BÌNH THƯỜNG (Mặc định) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/selector_unselected_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>