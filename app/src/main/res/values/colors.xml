<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- === MÀU GỐC (Base Colors) === -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <!-- Slightly deeper, less neon blue for better contrast on white surfaces -->
    <color name="blue">#FF1565C0</color>

    <!-- Used by some legacy drawables; keep defined for compatibility -->
    <color name="navi">#FF243647</color>

    <!-- === MÀU CHỨC NĂNG (Dùng chung tên biến) === -->

    <!-- 1. Màu Thương Hiệu -->
    <color name="brand_blue">@color/blue</color>

    <!-- 2. Nền (Backgrounds) - SÁNG -->
    <!-- Soft off-white so cards have separation without looking "dirty" -->
    <color name="app_background_color">#FFF8FAFC</color>
    <color name="card_background_color">#FFFFFFFF</color>

    <!-- 3. Chữ (Texts) - SÁNG -->
    <!-- Near-black is easier on eyes than pure #000 -->
    <color name="text_primary_color">#FF0F172A</color>
    <color name="text_secondary_color">#FF475569</color>

    <!-- 4. Selector & Icon (Nút chọn) - SÁNG -->
    <color name="selector_selected_color">@color/brand_blue</color>
    <color name="selector_unselected_color">#FFE2E8F0</color>

    <!-- 5. Progress Bar - SÁNG -->
    <color name="progress_track_color">#FFE2E8F0</color>
    <color name="progress_indicator_color">@color/brand_blue</color>

</resources>