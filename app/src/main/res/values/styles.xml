<resources>
    <!-- Style cho Header Thứ (S M T W...) -->
    <style name="CalendarDayHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style cho Ngày THƯỜNG (1 2 3...) -->
    <style name="CalendarDayText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item> <!-- Màu chữ theo theme -->
        <item name="android:textSize">14sp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item> <!-- Hiệu ứng click -->
    </style>

    <!-- Style cho Ngày ĐƯỢC CHỌN (Selected) -->
    <style name="CalendarDayTextSelected" parent="CalendarDayText">
        <item name="android:textColor">@color/white</item> <!-- Chữ trắng -->
        <item name="android:background">@drawable/bg_calendar_selected</item> <!-- Nền xanh -->
        <item name="android:textStyle">bold</item>
    </style>
</resources>