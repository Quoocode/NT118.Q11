<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container_login"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/container_login"
  android:gravity="left|top"
  android:orientation="vertical">
  
  <LinearLayout
    android:id="@+id/container_login_2"
    android:layout_width="match_parent"
    android:layout_height="844dp"
    android:background="@drawable/container_login_2"
    android:gravity="left|top"
    android:orientation="vertical">
    
    <LinearLayout
      android:id="@+id/container_login_4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/container_login_4"
      android:gravity="left|top"
      android:orientation="vertical"
      android:paddingBottom="8dp"
      android:paddingLeft="64dp"
      android:paddingRight="64dp"
      android:paddingTop="16dp">
      
      <TextView
        android:id="@+id/text_habit_tracker"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Habit Tracker"
        android:textColor="#FFFFFFFF"
        android:textSize="18dp" />
    </LinearLayout>
    
    <LinearLayout
      android:id="@+id/container_login_7"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="12dp"
      android:background="@drawable/container_login_7"
      android:clipToPadding="false"
      android:gravity="left|center_vertical"
      android:orientation="horizontal"
      android:paddingBottom="16dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="16dp">
      
      <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FF91ADC9"
        android:textSize="16dp" />

    </LinearLayout>
    
    <LinearLayout
      android:id="@+id/container_login_12"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="12dp"
      android:background="@drawable/container_login_12"
      android:clipToPadding="false"
      android:gravity="left|center_vertical"
      android:orientation="horizontal"
      android:paddingBottom="16dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="16dp">
      
      <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FF91ADC9"
        android:textSize="16dp" />
    </LinearLayout>
    
    <LinearLayout
      android:id="@+id/container_login_15"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="@drawable/container_login_15"
      android:clipToPadding="false"
      android:gravity="left|center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="16dp"
      android:paddingRight="16dp">

      <CheckBox
          android:id="@+id/container_login_16"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:buttonTint="#FFFFFFFF"
          android:checked="false"
          android:text=""
          android:padding="0dp" />
      
      <TextView
        android:id="@+id/container_login_18"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Remember Me"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp" />
    </LinearLayout>
    
    <LinearLayout
      android:id="@+id/container_login_20"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="12dp"
      android:background="@drawable/container_login_20"
      android:clipToPadding="false"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:clickable="true"
      android:focusable="true">

      <TextView
        android:id="@+id/container_login_20_22"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Log In"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp" />
    </LinearLayout>
    
    <LinearLayout
      android:id="@+id/container_login_24"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="12dp"
      android:background="@drawable/container_login_24"
      android:clipToPadding="false"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:clickable="true"
      android:focusable="true">

      <TextView
        android:id="@+id/container_login_24_26"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Sign Up"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp" />
    </LinearLayout>
    
    <TextView
      android:id="@+id/container_login_28"
      android:layout_width="match_parent"
      android:layout_height="21dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="12dp"
      android:gravity="center_horizontal|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Forgot your password"
      android:textColor="#FF91ADC9"
      android:textSize="14dp"
      android:clickable="true"
      android:focusable="true" />

    <TextView
      android:id="@+id/container_login_30"
      android:layout_width="match_parent"
      android:layout_height="23dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="8dp"
      android:gravity="left|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Or continue with"
      android:textColor="#FFFFFFFF"
      android:textSize="18dp" />
    
    <LinearLayout
      android:id="@+id/container_login_32_33"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="left|top"
      android:orientation="horizontal"
      android:paddingBottom="12dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="12dp">
      
      <LinearLayout
        android:id="@+id/container_login_32_34_35"
        android:layout_width="84dp"
        android:layout_height="40dp"
        android:background="@drawable/container_login_32_34_35"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/text_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Google"
            android:textColor="#FFFFFFFF"
            android:textSize="14dp" />
      </LinearLayout>
      <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />
      
      <LinearLayout
        android:id="@+id/container_login_32_38"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/container_login_32_38"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        
        <TextView
          android:id="@+id/text_facebook"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:gravity="center"
          android:includeFontPadding="false"
          android:maxLines="1"
          android:singleLine="true"
          android:text="Facebook"
          android:textColor="#FFFFFFFF"
          android:textSize="14dp" />
      </LinearLayout>
    </LinearLayout>
    
    <TextView
      android:id="@+id/container_login_40"
      android:layout_width="match_parent"
      android:layout_height="21dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="12dp"
      android:gravity="center_horizontal|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Continue as Guest"
      android:textColor="#FF91ADC9"
      android:textSize="14dp"
      android:clickable="true"
      android:focusable="true" />
  </LinearLayout>
</LinearLayout>
