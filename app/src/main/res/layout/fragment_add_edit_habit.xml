<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:gravity="left|top"
    android:orientation="vertical"
    tools:context="com.example.habittracker.ui.habit.AddEditHabitFragment">

    <!-- Header / Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?android:attr/textColorPrimary"/>

            <TextView
                android:id="@+id/tv_screen_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="New Habit"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Placeholder để căn giữa title -->
            <View android:layout_width="24dp" android:layout_height="24dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Nội dung cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- 1. Habit Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/container_navi"
                android:backgroundTint="?attr/colorSurfaceContainer"
                android:padding="16dp">

                <EditText
                    android:id="@+id/edit_habit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Habit name"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorSecondary"
                    android:textSize="16sp"
                    android:inputType="textCapSentences"/>
            </LinearLayout>

            <!-- 2. Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/container_navi"
                android:backgroundTint="?attr/colorSurfaceContainer"
                android:padding="16dp">

                <EditText
                    android:id="@+id/edit_habit_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Description (Optional)"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorSecondary"
                    android:textSize="14sp"
                    android:inputType="textCapSentences|textMultiLine"
                    android:minLines="2"/>
            </LinearLayout>

            <!-- 3. Icon Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Icon"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:clipToPadding="false"
                android:overScrollMode="never"/>

            <!-- 4. Frequency -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="Frequency"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/btn_freq_once"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_freq_selector"
                    android:gravity="center"
                    android:text="Once"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn_freq_daily"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_freq_selector"
                    android:gravity="center"
                    android:text="Daily"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn_freq_weekly"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_freq_selector"
                    android:gravity="center"
                    android:text="Weekly"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn_freq_monthly"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_freq_selector"
                    android:gravity="center"
                    android:text="Monthly"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- 5. Reminders & Target -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="Reminders and Target"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Reminder Time -->
            <LinearLayout
                android:id="@+id/btn_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reminder Time"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?android:attr/textColorSecondary"/>
            </LinearLayout>

            <!-- Start Date -->
            <LinearLayout
                android:id="@+id/btn_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?android:attr/textColorSecondary"/>
            </LinearLayout>

            <!-- Target Value & Unit -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:background="@drawable/container_navi"
                    android:backgroundTint="?attr/colorSurfaceContainer"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target Value"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/edit_habit_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="?android:attr/textColorPrimary"
                        android:inputType="numberDecimal"
                        android:hint="0"
                        android:textColorHint="?android:attr/textColorSecondary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/container_navi"
                    android:backgroundTint="?attr/colorSurfaceContainer"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unit"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/edit_habit_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="?android:attr/textColorPrimary"
                        android:hint="km"
                        android:textColorHint="?android:attr/textColorSecondary"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Action Button (DUY NHẤT 1 NÚT) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?android:attr/windowBackground">

        <TextView
            android:id="@+id/btn_confirm_action"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/container_blue"
            android:gravity="center"
            android:text="Create Habit"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</LinearLayout>