<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container_forgot_password_new_password"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/container_forgot_password_new_password"
  android:gravity="left|top"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/container_reset_password"
    android:layout_width="390dp"
    android:layout_height="47dp"
    android:layout_marginTop="22dp"
    android:layout_gravity="left"
    android:background="@drawable/container_reset_password"
    android:clipToPadding="false"
    android:gravity="left|center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">
    
    <ImageView
      android:id="@+id/container_depth_frame"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:scaleType="centerInside"
      android:src="@drawable/container_depth_frame" />
    
    <TextView
      android:id="@+id/container_depth_frame1"
      android:layout_width="match_parent"
      android:layout_height="23dp"
      android:layout_marginLeft="48dp"
      android:layout_marginRight="48dp"
      android:layout_weight="1"
      android:gravity="center_horizontal|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Reset your password"
      android:textColor="#FFFFFFFF"
      android:textSize="18dp" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/container_depth_frame2"
    android:layout_width="380dp"
    android:layout_height="56dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="43dp"
    android:layout_gravity="left"
    android:background="@drawable/container_depth_frame4"
    android:clipToPadding="false"
    android:gravity="left|center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
      android:id="@+id/text_new_password"
      android:layout_width="wrap_content"
      android:layout_height="24dp"
      android:gravity="left|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="New password"
      android:textColor="#FF91ADC9"
      android:textSize="16dp" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/container_depth_frame4"
    android:layout_width="380dp"
    android:layout_height="56dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="55dp"
    android:layout_gravity="left"
    android:background="@drawable/container_depth_frame4"
    android:clipToPadding="false"
    android:gravity="left|center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
      android:id="@+id/text_confirm_new_password"
      android:layout_width="wrap_content"
      android:layout_height="24dp"
      android:gravity="left|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Confirm new password"
      android:textColor="#FF91ADC9"
      android:textSize="16dp" />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/container_submit"
      android:layout_width="390dp"
      android:layout_height="48dp"
      android:layout_gravity="left"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="57dp"
      android:background="@drawable/container_submit"
      android:clipToPadding="false"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingLeft="20dp"
      android:paddingRight="20dp">

    <TextView
        android:id="@+id/container_depth_frame7"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:ellipsize="end"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Submit"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp" />
  </LinearLayout>
</LinearLayout>
