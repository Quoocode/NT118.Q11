<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/container_navi"
        android:backgroundTint="?attr/colorSurfaceContainer"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/achievement_detail_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:contentDescription="@string/achievement_icon_desc"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cup"
            app:tint="?android:attr/textColorPrimary"/>
        <!-- Tint icon theo màu chữ chính -->
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/achievement_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/achievement_title_placeholder" />

        <TextView
            android:id="@+id/achievement_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp"
            android:text="@string/achievement_description_placeholder" />

        <!-- Progress (only shown while locked) -->
        <LinearLayout
            android:id="@+id/achievement_detail_progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/achievement_detail_progress_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                android:text="@string/achievement_progress_label" />

            <ProgressBar
                android:id="@+id/achievement_detail_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="6dp"
                android:indeterminate="true"
                android:progressDrawable="@drawable/custom_progress_bar" />
        </LinearLayout>

        <TextView
            android:id="@+id/achievement_detail_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:text="@string/achievement_not_unlocked" />

    </LinearLayout>

</LinearLayout>