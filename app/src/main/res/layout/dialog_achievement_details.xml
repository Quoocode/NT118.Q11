<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/container_navi"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/achievement_detail_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:contentDescription="Achievement icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cup" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/achievement_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Title" />

        <TextView
            android:id="@+id/achievement_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#FF91ADC9"
            android:textSize="14sp"
            android:text="Description" />

        <TextView
            android:id="@+id/achievement_detail_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp"
            android:text="Not yet unlocked" />

    </LinearLayout>

</LinearLayout>

