<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/achievements_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_achievements_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Achievements"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />
    <!-- Đổi sp cho textSize, dùng textColorPrimary -->

    <LinearLayout
        android:id="@+id/certificate_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/container_navi"
        android:backgroundTint="?attr/colorSurfaceContainer"
        android:orientation="vertical"
        android:padding="16dp">
        <!-- Thêm backgroundTint để đổi màu nền container -->

        <TextView
            android:id="@+id/tv_certificate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificate"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/certificate_placeholder"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorSurface"
            android:foregroundGravity="center">
            <!-- Đổi background cứng thành colorSurface -->

            <TextView
                android:id="@+id/tv_no_certificate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="No certificate"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/badges_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_badges_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Badges"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/badges_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btn_badge_expand"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/container_navi"
                    android:backgroundTint="?attr/colorSurfaceContainer"
                    android:contentDescription="Expand badges"
                    android:padding="12dp"
                    android:src="@drawable/ic_chevron_down"
                    app:tint="?android:attr/textColorPrimary" />
                <!-- Thêm backgroundTint và tint icon -->

                <FrameLayout
                    android:id="@+id/badge_blur_target"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/btn_badge_expand"
                    android:layout_marginEnd="8dp">

                    <HorizontalScrollView
                        android:id="@+id/badges_horizontal_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:requiresFadingEdge="horizontal"
                        android:fadingEdgeLength="50dp">

                        <LinearLayout
                            android:id="@+id/badges_horizontal_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="4dp"
                            android:paddingEnd="4dp"
                            android:paddingStart="4dp"
                            android:paddingTop="4dp" />
                    </HorizontalScrollView>
                </FrameLayout>

            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/badge_grid_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="?attr/colorSurface"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">
            <!-- Đổi background cứng thành colorSurface -->

            <GridLayout
                android:id="@+id/badges_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:columnOrderPreserved="false">
            </GridLayout>

            <Button
                android:id="@+id/btn_badge_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/container_navi"
                android:backgroundTint="?attr/colorSurfaceContainer"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Show less"
                android:textColor="?android:attr/textColorPrimary" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>