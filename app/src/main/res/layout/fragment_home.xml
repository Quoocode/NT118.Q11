<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context="com.example.habittracker.ui.home.HomeFragment">

    <!--
         Lưu ý: android:background="?android:attr/windowBackground"
         sẽ tự động lấy màu tối (#111827) hoặc sáng (#FFFFFF) từ themes.xml
    -->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container_home_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_home_screen1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:orientation="vertical">

                <!-- Header: Dashboard Title + Add Button -->
                <LinearLayout
                    android:id="@+id/container_depth_frame1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/tv_dashboard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Dashboard"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/container_depth_frame3"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/container_depth_frame5"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/btn_add_habit_today"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="centerInside"
                                android:clickable="true"
                                android:focusable="true"
                                android:src="@drawable/ic_plus"
                                app:tint="?android:attr/textColorPrimary"
                                android:background="?attr/selectableItemBackgroundBorderless"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- SECTION: Today -->
                <TextView
                    android:id="@+id/tv_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:text="Today"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_habits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="16dp"
                    tools:listitem="@layout/item_today_habit" />

                <!-- SECTION: Progress -->
                <TextView
                    android:id="@+id/container_depth_frame35"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Progress"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="22sp" />

                <LinearLayout
                    android:id="@+id/container_depth_frame37"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:gravity="left|top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/container_depth_frame38"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Daily Habits"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_progress_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        tools:text="3/5"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="14sp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_bar_daily"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:progressDrawable="@drawable/custom_progress_bar" />

                <!-- SECTION: Streaks -->
                <TextView
                    android:id="@+id/container_depth_frame46"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Streaks"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="22sp" />

                <!-- Current Streak Card -->
                <LinearLayout
                    android:id="@+id/container_depth_frame47"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:id="@+id/container_depth_frame48"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/container_navi"
                        android:backgroundTint="?attr/colorSurfaceContainer"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <!-- Thêm backgroundTint để đổi màu nền container theo theme -->

                        <ImageView
                            android:id="@+id/container_depth_frame49"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_fire"
                            app:tint="?android:attr/textColorPrimary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_depth_frame50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:gravity="left|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_detail_current_streak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:text="0 days"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/container_depth_frame52"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Current"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Longest Streak Card -->
                <LinearLayout
                    android:id="@+id/container_depth_frame53"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:id="@+id/container_depth_frame54"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/container_navi"
                        android:backgroundTint="?attr/colorSurfaceContainer"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/container_depth_frame55"
                            android:layout_width="19dp"
                            android:layout_height="24dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_cup"
                            app:tint="?android:attr/textColorPrimary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_depth_frame56"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:gravity="left|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_detail_longest_streak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:singleLine="true"
                            tools:text="0 days"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/container_depth_frame58"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Longest"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Include Achievements -->
                <include
                    android:id="@+id/include_achievements"
                    layout="@layout/fragment_achievements" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>